.row
  .col-md-12
    = form_for @person, url: wizard_path, method: :patch, html: {class: 'form-horizontal'} do |f|

      = render partial: 'errors'

      .form-group
        %label.col-sm-2.control-label
          Name
        .col-sm-5
          = f.text_field :name, class: 'form-control', placeholder: 'Name'

      .form-group
        %label.col-sm-2.control-label
          Surname
        .col-sm-5
          = f.text_field :surname, class: 'form-control', placeholder: 'Surname'

      .form-group
        %label.col-sm-2.control-label
          Sex
        .col-sm-5
          = f.radio_button :sex, 'male', class: 'form-control', checked: 'checked'
          Male
          = f.radio_button :sex, 'female', class: 'form-control'
          Female


      .form-group
        .col-sm-5.col-sm-offset-2
          .actions
            = f.submit 'Next step', class: 'btn btn-success'